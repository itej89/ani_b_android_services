<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    tools:context=".activity_applet"
    android:rotation="180">

    <View
        android:id="@+id/imgbkgViewMainHeadLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:background="#ffffff"></View>

    <ImageView
        android:id="@+id/imgaccessoryimg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"

        android:layout_marginEnd="50dp"
        android:alpha="1"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/imgaccessorylogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:id="@+id/imgaccessorylogo"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="100dp"

        android:layout_marginEnd="100dp"
        android:layout_marginBottom="150dp"
        android:alpha="1"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></ImageView>

    <View
        android:id="@+id/accbkgViewMainHeadLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="#000000"></View>

</androidx.constraintlayout.widget.ConstraintLayout>